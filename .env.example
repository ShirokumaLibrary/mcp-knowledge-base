# Example environment configuration
# Copy this file to .env and update with your values

# Prisma database connection URL
SHIROKUMA_DATABASE_URL=file:/home/webapp/.shirokuma/data/shirokuma.db

# Data directory path
SHIROKUMA_DATA_DIR=/home/webapp/.shirokuma/data

# Export directory path
SHIROKUMA_EXPORT_DIR=docs/export

# Claude API key (optional)
# ANTHROPIC_API_KEY=your-secret-key-here

# Environment type
# Values: development, production, test
NODE_ENV=development

